{
	"name": "chrome style",
	"version": "2.0",
	"description": "change display style of some pages.",
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},
	"permissions": [
		"tabs",
	"http://*/",
	"https://*/"
		],
	"browser_action": {
		"default_title": "chrome style"
	},
	"commands": {
		"changeFontSansSerif": {
			"suggested_key": {
				"default": "Alt + W"
			},
			"description": "change display font to Sans-Serif"
		},
		"changeFontSerif": {
			"suggested_key": {
				"default": "Alt + Q"
			},
			"description": "change display font to Serif"
		},
		"splitWindow":{
			"suggested_key": {
				"default": "Alt + S"
			},
			"description": "split tabs into new window"
		},
		"combineWindow":{
			"suggested_key": {
				"default": "Alt + C"
			},
			"description": "combine windows"
		}
	},
	"manifest_version": 2
}
